SERVER		=	server
CLIENT		=	client

##################################### PATH #####################################

#################################### SOURCES ###################################

#-----------------------------SERVER-#
SRC_SERVER	+=	server.c \
				utils.c \
				basic.c
#-----------------------------CLIENT-#
SRC_SERVER	+=	client.c \
				utils.c \
				basic.c

################################### INCLUDES ###################################

INC			+=	./

##################################### BASIC ####################################

CC 			= 	gcc

CFLAGS 		= 	-Wall -Wextra -Werror

# OBJS_VEC	=

##################################### RULES ####################################
INC		= 	cub3d_header/

HEADER	= 	$(INC)minitalk.h

OBJ_SERVER	=	$(SERVER:.c=.o)
OBJ_CLIENT	=	$(CLIENT:.c=.o)

$(OBJS): %.o: %.c $(HEADER)
		$(CC) $(CFLAGS) -I$(INC) -c $< -o $@

all: $(SERVER) $(CLIENT)
	
$(SERVER): $(OBJ_SERVER)
	@$(CC) $(CFLAGS) $(OBJS_SERVER) -o $(SERVER) && ([ $$? -eq 0 ] \
	&& echo "Compilation of \033[33;1m$(SERVER)\033[0;1m: [\033[1;32mOK\033[0;1m]\033[0m") \
	|| echo "Compilation of \033[33;1m$(SERVER)\033[0;1m: [\033[1;31mKO\033[0;1m]\033[0m"

$(CLIENT): $(OBJ_CLIENT)
	@$(CC) $(CFLAGS) $(OBJS_CLIENT) -o $(CLIENT) && ([ $$? -eq 0 ] \
	&& echo "Compilation of \033[33;1m$(CLIENT)\033[0;1m: [\033[1;32mOK\033[0;1m]\033[0m") \
	|| echo "Compilation of \033[33;1m$(CLIENT)\033[0;1m: [\033[1;31mKO\033[0;1m]\033[0m"
	
clean:
	@rm -rf $(SERVER).o $(CLIENT).o

fclean: clean
	@rm -rf $(SERVER) $(CLIENT)

re: fclean all

.PHONY: all clean fclean re

	